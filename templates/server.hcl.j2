# MANAGED_BY_ANSIBLE

data_dir   = "{{nomad_lib_dir}}"
datacenter = "{{consul_datacentre}}"
log_level  = "{{nomad_log_level}}"

server {
  bootstrap_expect = 3
  enabled          = true
}
{% if nomad_vault_token is defined %}

vault {
  address          = "https://{{vault_address}}"
  create_from_role = "{{nomad_vault_role}}"
  enabled          = true
  token            = "{{nomad_vault_token}}"
}
{% endif %}
{% if nomad_publish_to_datadog is defined and nomad_publish_to_datadog %}

telemetry {
  publish_allocation_metrics = true
  publish_node_metrics       = true
  datadog_address            = "localhost:8125"
  disable_hostname           = true
  collection_interval        = "10s"
}
{% endif %}

# end
